print(
"""
*********************************
Welcome to Lucy's Sewing Shop.
type 1 for curtains.
type 2 for cushion covers.
type 3 for quilts.
*********************************"""
)

choice = int(input("Enter a number: "))

while choice < 0 or choice > 3:
    print("Invalid input.")
    choice = int(input("Enter a number: "))

if choice == 1:
    print("you chose a curtain")
elif choice == 2:
    print("you chose a cushion covers")
elif choice == 3:
    print("you chose a quilts") 




